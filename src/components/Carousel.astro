---
import "../styles/global.css";
import CarouselSlide from "../components/CarouselSlide.astro";
import image1 from "../assets/fadoboz.jpg";
import image2 from "../assets/viragpor.jpeg";
import image3 from "../assets/landscape.png";

const title1 = "Díszdobozok";
const text1 =
  "Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.";
const title2 = "Virágpor";
const title3 = "Zümm Zümm";
---

<section class="slider-wrapper">
  <button class="slide-arrow" id="slide-arrow-prev"> &#8249;</button>

  <button class="slide-arrow" id="slide-arrow-next"> &#8250;</button>

  <ul class="slides-container" id="slides-container">
    <li class="slide">
      <CarouselSlide
        isPortrait="false"
        image={image3}
        ,
        slideTitle={title3}
        ,
        slideMessage={text1}
      />
    </li>
    <li class="slide">
      <CarouselSlide
        isPortrait="true"
        image={image2}
        ,
        slideTitle={title2}
        ,
        slideMessage={text1}
      />
    </li>
    <li class="slide">
      <CarouselSlide
        isPortrait="true"
        image={image1}
        ,
        slideTitle={title1}
        ,
        slideMessage={text1}
      />
    </li>
  </ul>
</section>

<script>
  const slidesContainer = document.getElementById("slides-container");
  const slide = document.querySelector(".slide");
  const prevButton = document.getElementById("slide-arrow-prev");
  const nextButton = document.getElementById("slide-arrow-next");
  let sumScroll = 0;
  const slidesContainerWidth = slidesContainer.scrollWidth;
  let slideWidth = slide.clientWidth;

  function clickNextButton() {
    if (slidesContainerWidth - sumScroll > sumScroll) {
      slideWidth = slide.clientWidth;
      sumScroll = sumScroll + slideWidth;
      slidesContainer.scrollLeft += slideWidth;
    } else {
      slidesContainer.scrollTo(0, 0);
      slideWidth = 0;
      sumScroll = 0;
    }
  }

  var intervalReference = setInterval(clickNextButton, 3000);

  slidesContainer.addEventListener("mouseover", (event) => {
    console.log("hover");
    clearInterval(intervalReference);
  });

  slidesContainer.addEventListener("mouseout", (event) => {
    console.log("out");
    intervalReference  = setInterval(clickNextButton, 3000);
  });

  nextButton.addEventListener("click", (event) => {
    console.log("click");
    clickNextButton();
  });

  prevButton.addEventListener("click", () => {
    const slideWidth = slide.clientWidth;
    slidesContainer.scrollLeft -= slideWidth;
    sumScroll = sumScroll - slideWidth;
  });
</script>
