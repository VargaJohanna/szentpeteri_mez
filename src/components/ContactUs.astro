---
import image from "../assets/contact_us_bee.jpg";

const contactTitle = "Elérhetőségeink";
const phoneNumber = "06 30/433-4689";
const name = "Szentpéteri András";
const email = "szentpeterimez@gmail.com"
---

<div class="contact-us-container">
  <div class="contact-image">
    <img src={image} style="width:100%" alt="Közeli fénykép kaptárról és méhekről"/>
  </div>
  <div style="width:100%;height:100%;" class="contact-message">
    <div class="contact-title">{contactTitle}</div>
    <div class="contact-name">
      {name}
    </div>
    <div class="contact-number">{phoneNumber}</div>
    <div class="contact-email">{email}</div>
  </div>
  <div class="contact-bottom">
    <div class="attribution">
      <a
        href="https://www.freepik.com/free-photo/close-up-honeycomb-with-bee-honey-ai-generative_41367691.htm#query=close-up-honeycomb-with-bee-honey-ai-generative&position=1&from_view=search&track=sph"
      >
        Image by chandlervid85</a
      > on Freepik
    </div>
  </div>
</div>
